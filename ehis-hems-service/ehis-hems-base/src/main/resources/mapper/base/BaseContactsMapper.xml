            <if test="role != null  and role != ''"> and role = #{role}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="mobile != null  and mobile != ''"> and mobile = #{mobile}</if>
            <if test="workingStart != null "> and working_start = #{workingStart}</if>
            <if test="workingEnd != null "> and working_end = #{workingEnd}</if>
            <if test="accountNo != null  and accountNo != ''"> and account_no = #{accountNo}</if>
            <if test="password != null  and password != ''"> and password = #{password}</if>
            and status = 'Y'
        </where>
    </select>

    <select id="selectBaseContactsById" parameterType="String" resultMap="BaseContactsResult">
