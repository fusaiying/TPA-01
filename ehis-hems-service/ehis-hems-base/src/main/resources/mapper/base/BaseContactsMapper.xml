    <sql id="selectBaseContactsVo">
        select serial_no,update_flag, supplier_code, supplier_type, place_type,
         (SELECT DISTINCT
				dict_label from sys_dict_data
			WHERE
				dict_type = 'place_type' and dict_value = base_contacts_bak.place_type)  placeTypeName,
         name, email, role, phone, mobile, working_start, working_end, account_no, password, status, create_by, create_time, update_by, update_time from base_contacts_bak
    </sql>

    <sql id="selectBaseContactsVoNew">
