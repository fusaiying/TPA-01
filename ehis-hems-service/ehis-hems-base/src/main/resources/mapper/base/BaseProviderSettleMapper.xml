    <sql id="selectBaseProviderSettleVo">
        select serial_no,update_flag,provider_code, currency,
         (SELECT DISTINCT
				dict_label from sys_dict_data
			WHERE
				dict_type = 'currency' and dict_value = base_provider_settle_bak.currency)  currencyName,
	claim_flag,
(SELECT DISTINCT
				dict_label from sys_dict_data
			WHERE
				dict_type = 'yes_or_no' and dict_value = base_provider_settle_bak.claim_flag)  claimFlagName,
         notice_day, effect_time, status, create_by, create_time, update_by, update_time from base_provider_settle_bak
    </sql>

    <sql id="selectBaseProviderSettleVoNew">
        select serial_no,update_flag,provider_code, currency,
