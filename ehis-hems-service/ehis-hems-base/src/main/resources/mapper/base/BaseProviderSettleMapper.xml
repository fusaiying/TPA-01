    </sql>

    <select id="selectBaseProviderSettleList" parameterType="BaseProviderSettle" resultMap="BaseProviderSettleResult">
        <include refid="selectBaseProviderSettleVo"/>
        <where>
            <if test="providerCode != null  and providerCode != ''"> and provider_code = #{providerCode}</if>
            <if test="currency != null  and currency != ''"> and currency = #{currency}</if>
            <if test="claimFlag != null  and claimFlag != ''"> and claim_flag = #{claimFlag}</if>
            <if test="noticeDay != null  and noticeDay != ''"> and notice_day = #{noticeDay}</if>
            <if test="effectTime != null "> and effect_time = #{effectTime}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectBaseProviderSettleById" parameterType="String" resultMap="BaseProviderSettleResult">
        <include refid="selectBaseProviderSettleVo"/>
        where provider_code = #{providerCode}  and status = 'Y' and update_flag = '0'
    </select>

    <select id="selectBaseProviderSettleByIdNew" parameterType="String" resultMap="BaseProviderSettleResult">
