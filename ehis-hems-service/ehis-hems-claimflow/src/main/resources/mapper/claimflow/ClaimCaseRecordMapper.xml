    <select id="selectMinAcceptTime" parameterType="String" resultType="String">
        select CONCAT(
                       FLOOR( TIMESTAMPDIFF( SECOND, min(update_time), now( ) ) / 86400 ),
                       '天',
                       TIMESTAMPDIFF( HOUR, min(update_time), now( ) ) % 24,
                       '时',
                       TIMESTAMPDIFF( MINUTE, min(update_time), now( ) ) % 60,
                       '分'
                   )  min_time
        from claim_case_record
        where operation = '05' and history_flag = 'Y' and rpt_no = #{rptNo}
    </select>

