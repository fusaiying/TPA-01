<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.claimflow.mapper.SyncExchangeRateMapper">

	<resultMap type="com.paic.ehis.claimflow.domain.SyncExchangeRate" id="SyncExchangeRateResult">
		<id     property="rateId"       column="rate_id"        />
		<result property="beforeMoney"     column="before_money"      />
		<result property="afterMoney"      column="after_money"       />
		<result property="parities"     column="parities"      />
		<result property="dateConvert"    column="date_convert"     />
		<result property="status"       column="status"         />
		<result property="createBy"     column="create_by"      />
		<result property="createTime"   column="create_time"    />
		<result property="updateBy"     column="update_by"      />
		<result property="updateTime"   column="update_time"    />
	</resultMap>

	<sql id="selectRoleVo">
	    select r.rate_id, r.before_money, r.after_money, r.parities, r.date_convert,
            r.status, r.create_by, r.create_time
        from sync_exchange_rate r
    </sql>

	<select id="getSyncExchangeRate" parameterType="com.paic.ehis.claimflow.domain.SyncExchangeRate" resultMap="SyncExchangeRateResult">
		<include refid="selectRoleVo"/>
		WHERE r.status = 'Y' and r.before_money = #{beforeMoney} and r.after_money = #{afterMoney} and r.date_convert = #{dateConvert}
	</select>
 	
</mapper> 