<mapper namespace="com.paic.ehis.claimmgt.mapper.ClaimCaseAppealRecordMapper">
    
    <resultMap type="ClaimCaseAppealRecord" id="ClaimCaseAppealRecordResult">
        <result property="recordId"    column="record_id"    />
        <result property="taskId"    column="task_id"    />
        <result property="operation"    column="operation"    />
        <result property="operator"    column="operator"    />
        <result property="historyFlag"    column="history_flag"    />
        <result property="orgRecordId"    column="org_record_id"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectClaimCaseAppealRecordVo">
        select record_id, task_id, operation, operator, history_flag, org_record_id, status, create_by, create_time, update_by, update_time from claim_case_appeal_record
    </sql>

    <select id="selectClaimCaseAppealRecordList" parameterType="ClaimCaseAppealRecord" resultMap="ClaimCaseAppealRecordResult">
        <include refid="selectClaimCaseAppealRecordVo"/>
        <where>  
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="operation != null  and operation != ''"> and operation = #{operation}</if>
            <if test="operator != null  and operator != ''"> and operator = #{operator}</if>
            <if test="historyFlag != null  and historyFlag != ''"> and history_flag = #{historyFlag}</if>
            <if test="orgRecordId != null "> and org_record_id = #{orgRecordId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectClaimCaseAppealRecordById" parameterType="Long" resultMap="ClaimCaseAppealRecordResult">
        <include refid="selectClaimCaseAppealRecordVo"/>
        where record_id = #{recordId}
    </select>
        
    <insert id="insertClaimCaseAppealRecord" parameterType="ClaimCaseAppealRecord" useGeneratedKeys="true" keyProperty="recordId">
        insert into claim_case_appeal_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null">task_id,</if>
            <if test="operation != null and operation != ''">operation,</if>
            <if test="operator != null and operator != ''">operator,</if>
            <if test="historyFlag != null and historyFlag != ''">history_flag,</if>
            <if test="orgRecordId != null">org_record_id,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null">#{taskId},</if>
            <if test="operation != null and operation != ''">#{operation},</if>
            <if test="operator != null and operator != ''">#{operator},</if>
            <if test="historyFlag != null and historyFlag != ''">#{historyFlag},</if>
            <if test="orgRecordId != null">#{orgRecordId},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateClaimCaseAppealRecord" parameterType="ClaimCaseAppealRecord">
        update claim_case_appeal_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="operation != null and operation != ''">operation = #{operation},</if>
            <if test="operator != null and operator != ''">operator = #{operator},</if>
            <if test="historyFlag != null and historyFlag != ''">history_flag = #{historyFlag},</if>
            <if test="orgRecordId != null">org_record_id = #{orgRecordId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where record_id = #{recordId}
    </update>

    <delete id="deleteClaimCaseAppealRecordById" parameterType="Long">
        delete from claim_case_appeal_record where record_id = #{recordId}
    </delete>

    <delete id="deleteClaimCaseAppealRecordByIds" parameterType="String">
        delete from claim_case_appeal_record where record_id in 
        <foreach item="recordId" collection="array" open="(" separator="," close=")">
            #{recordId}
        </foreach>
    </delete>
</mapper>