<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.claimmgt.mapper.ClaimCaseDistMapper">
    
    <resultMap type="ClaimCaseDist" id="ClaimCaseDistResult">
        <result property="distId"    column="dist_id"    />
        <result property="userName"    column="user_name"    />
        <result property="userOrganCode" column="user_organ_code" />
        <result property="roleCode"    column="role_Code"    />
        <result property="rate"    column="rate"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <resultMap type="ClaimUserRole" id="ClaimUserRoleResult">
        <result property="userRoleId"    column="user_role_id"    />
        <result property="roleCode"    column="role_code"    />
        <result property="roleName" column="role_name" />
        <result property="isEqually"    column="is_equally"    />
        <result property="mappingType"    column="mapping_type"    />
        <result property="mappingValue"    column="mapping_value"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectClaimCaseDistVo">
        select dist_id, user_name, user_organ_code,role_code ,rate, status, create_by, create_time, update_by, update_time from claim_case_dist
    </sql>

    <sql id="selectClaimUserRoleVo">
        select user_role_id,role_code,role_name,is_equally,mapping_type,mapping_value, status, create_by, create_time, update_by, update_time from claim_user_role
    </sql>

    <select id="selectClaimCaseDistList" parameterType="ClaimCaseDist" resultMap="ClaimCaseDistResult">
        <include refid="selectClaimCaseDistVo"/>
        <where>
            <if test="userName != null  and userName != ''"> and user_name  = #{userName}</if>
            <if test="roleCode != null  and roleCode != ''"> and role_Code = #{roleCode}</if>
            <if test="userOrganCode != null  and userOrganCode != ''"> and user_organ_code = #{userOrganCode}</if>
            <if test="rate != null "> and rate = #{rate}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
        
    <insert id="insertClaimCaseDist" parameterType="ClaimCaseDist" useGeneratedKeys="true" keyProperty="distId">
        insert into claim_case_dist
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userName != null and userName != ''">user_name,</if>
            <if test="roleCode != null and roleCode != ''">role_Code,</if>
            <if test="userOrganCode != null and userOrganCode != ''">user_organ_code,</if>
            <if test="rate != null">rate,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userName != null and userName != ''">#{userName},</if>
            <if test="roleCode != null and roleCode != ''">#{roleCode},</if>
            <if test="userOrganCode != null and userOrganCode != ''">#{userOrganCode},</if>
            <if test="rate != null">#{rate},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateClaimCaseDist" parameterType="ClaimCaseDist">
        update claim_case_dist
        <trim prefix="SET" suffixOverrides=",">
            <if test="userName != null and userName != ''">user_name = #{userName},</if>
            <if test="roleCode != null and roleCode != ''">role_Code = #{roleCode},</if>
            <if test="userOrganCode != null and userOrganCode != ''">user_organ_code = #{userOrganCode},</if>
            <if test="rate != null">rate = #{rate},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        <where>
            <if test="userName != null  and userName != ''"> and user_name  = #{userName}</if>
            <if test="roleCode != null  and roleCode != ''"> and role_Code = #{roleCode}</if>
        </where>
    </update>

    <select id="selectClaimUserRole" parameterType="ClaimUserRole" resultMap="ClaimUserRoleResult">
        <include refid="selectClaimUserRoleVo"/>
        <where>
            <if test="roleCode != null  and roleCode != ''"> and role_code  = #{roleCode}</if>
            <if test="roleName != null  and roleName != ''"> and role_name like concat('%', #{roleName}, '%')</if>
            <if test="isEqually != null  and isEqually != ''"> and is_equally = #{isEqually}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <update id="updateClaimUserRole" parameterType="ClaimUserRole">
        update claim_user_role
        <trim prefix="SET" suffixOverrides=",">
            <if test="roleName != null and roleName != ''">role_name = #{roleName},</if>
            <if test="isEqually != null and isEqually != ''">is_equally = #{isEqually},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where role_code = #{roleCode}
    </update>
</mapper>