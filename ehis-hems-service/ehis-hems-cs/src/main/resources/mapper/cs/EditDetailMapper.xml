<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.cs.mapper.EditDetailMapper">
    
    <resultMap type="EditDetail" id="EditDetailResult">
        <result property="detailId"    column="detail_id"    />
        <result property="editId"    column="edit_id"    />
        <result property="keyDictType"    column="key_dict_type"    />
        <result property="itemName"    column="item_name"    />
        <result property="itemKey"    column="item_key"    />
        <result property="oldValue"    column="old_value"    />
        <result property="nowValue"    column="now_value"    />
        <result property="valueDictType"    column="value_dict_type"    />
        <result property="orderNo"    column="order_no"    />
        <result property="status"    column="status"    />
        <result property="createdBy"    column="created_by"    />
        <result property="createdTime"    column="created_time"    />
        <result property="updatedBy"    column="updated_by"    />
        <result property="updatedTime"    column="updated_time"    />
        <result property="editRemark"    column="edit_remark"    />
        <result property="editReason"    column="edit_reason"    />
    </resultMap>

    <sql id="selectEditDetailVo">
        select detail_id, edit_id, key_dict_type, item_name, item_key, old_value, now_value, value_dict_type, order_no, status, created_by, created_time, updated_by, updated_time from edit_detail
    </sql>

    <select id="selectEditDetailList" parameterType="EditDetail" resultMap="EditDetailResult">
        <include refid="selectEditDetailVo"/>
        <where>  
            <if test="editId != null  and editId != ''"> and edit_id = #{editId}</if>
            <if test="keyDictType != null  and keyDictType != ''"> and key_dict_type = #{keyDictType}</if>
            <if test="itemName != null  and itemName != ''"> and item_name like concat('%', #{itemName}, '%')</if>
            <if test="itemKey != null  and itemKey != ''"> and item_key = #{itemKey}</if>
            <if test="oldValue != null  and oldValue != ''"> and old_value = #{oldValue}</if>
            <if test="nowValue != null  and nowValue != ''"> and now_value = #{nowValue}</if>
            <if test="valueDictType != null  and valueDictType != ''"> and value_dict_type = #{valueDictType}</if>
            <if test="orderNo != null "> and order_no = #{orderNo}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="createdBy != null  and createdBy != ''"> and created_by = #{createdBy}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updatedBy != null  and updatedBy != ''"> and updated_by = #{updatedBy}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
        </where>
    </select>
    
    <select id="selectEditDetailById" parameterType="String" resultMap="EditDetailResult">
        <include refid="selectEditDetailVo"/>
        where detail_id = #{detailId}
    </select>

    <select id="selectEdit" parameterType="String" resultMap="EditDetailResult">
        SELECT
	i.edit_remark,
	i.edit_reason,
	d.old_value,
	d.now_value,
	d.item_key
FROM
	edit_info i,
	edit_detail d
WHERE
	i.edit_id = d.edit_id
	AND i.work_order_id=#{workOrderNo}
    </select>
        
    <insert id="insertEditDetail" parameterType="EditDetail">
        insert into edit_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="detailId != null">detail_id,</if>
            <if test="editId != null and editId != ''">edit_id,</if>
            <if test="keyDictType != null">key_dict_type,</if>
            <if test="itemName != null">item_name,</if>
            <if test="itemKey != null">item_key,</if>
            <if test="oldValue != null">old_value,</if>
            <if test="nowValue != null">now_value,</if>
            <if test="valueDictType != null">value_dict_type,</if>
            <if test="orderNo != null">order_no,</if>
            <if test="status != null">status,</if>
            <if test="createdBy != null and createdBy != ''">created_by,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedBy != null and updatedBy != ''">updated_by,</if>
            <if test="updatedTime != null">updated_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="detailId != null">#{detailId},</if>
            <if test="editId != null and editId != ''">#{editId},</if>
            <if test="keyDictType != null">#{keyDictType},</if>
            <if test="itemName != null">#{itemName},</if>
            <if test="itemKey != null">#{itemKey},</if>
            <if test="oldValue != null">#{oldValue},</if>
            <if test="nowValue != null">#{nowValue},</if>
            <if test="valueDictType != null">#{valueDictType},</if>
            <if test="orderNo != null">#{orderNo},</if>
            <if test="status != null">#{status},</if>
            <if test="createdBy != null and createdBy != ''">#{createdBy},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="updatedBy != null and updatedBy != ''">#{updatedBy},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
         </trim>
    </insert>

    <update id="updateEditDetail" parameterType="EditDetail">
        update edit_detail
        <trim prefix="SET" suffixOverrides=",">
            <if test="editId != null and editId != ''">edit_id = #{editId},</if>
            <if test="keyDictType != null">key_dict_type = #{keyDictType},</if>
            <if test="itemName != null">item_name = #{itemName},</if>
            <if test="itemKey != null">item_key = #{itemKey},</if>
            <if test="oldValue != null">old_value = #{oldValue},</if>
            <if test="nowValue != null">now_value = #{nowValue},</if>
            <if test="valueDictType != null">value_dict_type = #{valueDictType},</if>
            <if test="orderNo != null">order_no = #{orderNo},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createdBy != null and createdBy != ''">created_by = #{createdBy},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="updatedBy != null and updatedBy != ''">updated_by = #{updatedBy},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
        </trim>
        where detail_id = #{detailId}
    </update>

    <delete id="deleteEditDetailById" parameterType="String">
        delete from edit_detail where detail_id = #{detailId}
    </delete>

    <delete id="deleteEditDetailByIds" parameterType="String">
        delete from edit_detail where detail_id in 
        <foreach item="detailId" collection="array" open="(" separator="," close=")">
            #{detailId}
        </foreach>
    </delete>
    
</mapper>