        <include refid="selectHangUpLogVo"/>
        where hang_state = '01' AND work_order_no = #{workOrderNo}
    </select>

    <sql id="selectHangUpLogVoTwo">
        select  ifnull(sum(times),0) as times
        from hang_up_log
    </sql>

    <select id="selectHangUpLogByIdTwo" parameterType="String" resultMap="HangUpLogResultTwo">
