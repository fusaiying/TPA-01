    <!--    根据质检处理流水号查询质检处理信息-->
    <select id="getQualityHandleInfoById" resultType="com.paic.ehis.cs.domain.dto.QualityInspectionDTO" resultMap="QualityInspectionHandleVoMap">
        select qih.inspection_handler_id, qih.inspection_id,qih.score,qih.appeal_flag,qih.appeal_reason,qih.status
        from quality_inspection_handle qih where qih.inspection_handler_id=#{inspectionHandlerId}
    </select>
    <!--    根据质检编号查出最新质检信息: 质检号和业务类型必须传-->
    <select id="getQualityHandleItemInfo" resultType="com.paic.ehis.cs.domain.dto.QualityInspectionDTO" resultMap="qualityInspectionItemVoMap">
        select
            qii.inspection_handler_id,
            qii.inspection_id,
            IFNULL(cd.parent_code,'') as class_type,
            case when cd.parent_code is null or cd.parent_code='' then '' else (select pcd.code_name from code_dict pcd where pcd.code_type=cd.parent_code_type and pcd.code=cd.parent_code) end as class_name,
            cd.code as item_type,code_name as item_name,
            IFNULL(qii.value,'02') as item_value,
            qii.item_remark as item_remark
        from code_dict cd left join quality_inspection_item qii on cd.code=qii.item_key and qii.inspection_id=#{inspectionId} and qii.status='Y'
        where cd.code_type=#{codeType}
    </select>
