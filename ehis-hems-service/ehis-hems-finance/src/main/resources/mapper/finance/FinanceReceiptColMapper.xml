<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.finance.mapper.FinanceReceiptColMapper">
    
    <resultMap type="FinanceReceiptCol" id="FinanceReceiptColResult">
        <result property="colId"    column="col_id"    />
        <result property="receiptNo"    column="receipt_no"    />
        <result property="taskNo"    column="task_no"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="deptCode"    column="dept_code"    />
    </resultMap>
    <resultMap type="com.paic.ehis.finance.domain.FinanceCollectionInfo" id="FinanceCollectionInfoResult">
        <result property="collectionId"    column="collection_id"    />
        <result property="receiptNo"    column="receipt_no"    />
        <result property="receiptAccName"    column="receipt_acc_name"    />
        <result property="receiptCompanyName"    column="receipt_company_name"    />
        <result property="receiptAmount"    column="receipt_amount"    />
        <result property="receiptDate"    column="receipt_date"    />
        <result property="remark"    column="remark"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectFinanceReceiptColVo">
        select col_id, receipt_no, task_no, status, create_by, create_time, update_by, update_time, dept_code from finance_receipt_col
    </sql>

    <select id="selectFinanceReceiptColList" parameterType="FinanceReceiptCol" resultMap="FinanceReceiptColResult">
        <include refid="selectFinanceReceiptColVo"/>
        <where>  
            <if test="receiptNo != null  and receiptNo != ''"> and receipt_no = #{receiptNo}</if>
            <if test="taskNo != null  and taskNo != ''"> and task_no = #{taskNo}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="deptCode != null  and deptCode != ''"> and dept_code = #{deptCode}</if>
        </where>
    </select>

    <select id="selectTpaTaskReceiptColList" parameterType="FinanceReceiptCol" resultMap="FinanceCollectionInfoResult">
        SELECT
        info.receipt_acc_name,
        info.receipt_amount,
        info.receipt_date,
        info.remark,
        info.update_by
        FROM
        finance_receipt_col col
        LEFT JOIN finance_collection_info info ON info.receipt_no = col.receipt_no
        AND info.STATUS = 'Y'
        LEFT JOIN finance_tpa_settle_task task ON task.settle_task_no = task_no
        AND task.STATUS = 'Y'
        <where>
            <if test="companyCode != null  and companyCode != ''"> and company_code = #{companyCode}</if>
            <if test="receiptNo != null  and receiptNo != ''"> and receipt_no = #{receiptNo}</if>
            <if test="taskNo != null  and taskNo != ''"> and task_no = #{taskNo}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="deptCode != null  and deptCode != ''"> and dept_code = #{deptCode}</if>
        </where>
    </select>
    
    <select id="selectFinanceReceiptColById" parameterType="Long" resultMap="FinanceReceiptColResult">
        <include refid="selectFinanceReceiptColVo"/>
        where col_id = #{colId}
    </select>
        
    <insert id="insertFinanceReceiptCol" parameterType="FinanceReceiptCol" useGeneratedKeys="true" keyProperty="colId">
        insert into finance_receipt_col
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="receiptNo != null and receiptNo != ''">receipt_no,</if>
            <if test="taskNo != null and taskNo != ''">task_no,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="deptCode != null and deptCode != ''">dept_code,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="receiptNo != null and receiptNo != ''">#{receiptNo},</if>
            <if test="taskNo != null and taskNo != ''">#{taskNo},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="deptCode != null and deptCode != ''">#{deptCode},</if>
         </trim>
    </insert>

    <update id="updateFinanceReceiptCol" parameterType="FinanceReceiptCol">
        update finance_receipt_col
        <trim prefix="SET" suffixOverrides=",">
            <if test="receiptNo != null and receiptNo != ''">receipt_no = #{receiptNo},</if>
            <if test="taskNo != null and taskNo != ''">task_no = #{taskNo},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="deptCode != null and deptCode != ''">dept_code = #{deptCode},</if>
        </trim>
        where col_id = #{colId}
    </update>

    <delete id="deleteFinanceReceiptColById" parameterType="Long">
        delete from finance_receipt_col where col_id = #{colId}
    </delete>

    <delete id="deleteFinanceReceiptColByIds" parameterType="String">
        delete from finance_receipt_col where col_id in 
        <foreach item="colId" collection="array" open="(" separator="," close=")">
            #{colId}
        </foreach>
    </delete>
    
</mapper>