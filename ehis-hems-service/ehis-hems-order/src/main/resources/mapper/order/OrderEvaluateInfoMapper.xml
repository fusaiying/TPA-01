<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.order.mapper.OrderEvaluateInfoMapper">
    
    <resultMap type="OrderEvaluateInfo" id="OrderEvaluateInfoResult">
        <result property="serialNo"    column="serial_no"    />
        <result property="productCode"    column="product_code"    />
        <result property="serviceCode"    column="service_code"    />
        <result property="productName"    column="productName"    />
        <result property="serviceName"    column="serviceName"    />
        <result property="supplierName"    column="supplierName"    />
        <result property="name"    column="name"    />
        <result property="phone"    column="phone"    />
        <result property="idType"    column="id_type"    />
        <result property="idCode"    column="id_code"    />
        <result property="supplierCode"    column="supplier_code"    />
        <result property="customerNo"    column="customer_no"    />
        <result property="customerEvaluation"    column="customer_evaluation"    />
        <result property="evaluationContent"    column="evaluation_content"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectOrderEvaluateInfoVo">
        select serial_no, product_code, service_code, supplier_code, customer_no, customer_evaluation, evaluation_content, status, create_by, create_time, update_by, update_time from order_evaluate_info
    </sql>

    <select id="selectOrderEvaluateInfoList" parameterType="OrderEvaluateInfo" resultMap="OrderEvaluateInfoResult">
        <include refid="selectOrderEvaluateInfoVo"/>
        <where>  
            <if test="productCode != null  and productCode != ''"> and product_code = #{productCode}</if>
            <if test="serviceCode != null  and serviceCode != ''"> and service_code = #{serviceCode}</if>
            <if test="supplierCode != null  and supplierCode != ''"> and supplier_code = #{supplierCode}</if>
            <if test="customerNo != null  and customerNo != ''"> and customer_no = #{customerNo}</if>
            <if test="customerEvaluation != null  and customerEvaluation != ''"> and customer_evaluation = #{customerEvaluation}</if>
            <if test="evaluationContent != null  and evaluationContent != ''"> and evaluation_content = #{evaluationContent}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectOrderEvaluateInfoListNew" parameterType="OrderEvaluateInfo" resultMap="OrderEvaluateInfoResult">
        SELECT
            oei.product_code,
            pi.product_chname productName,
            oei.service_code,
            bsn.service_name serviceName,
            oei.supplier_code,
            bsi.chname supplierName,
            oei.customer_evaluation,
            oei.evaluation_content,
            ci.name,
            ci.phone,
            oei.create_time
            FROM
            order_evaluate_info oei
            LEFT JOIN customer_info ci ON ci.customer_no = oei.customer_no
            LEFT join product_info pi on pi.product_code = oei.product_code and pi.status = 'Y'
            LEFT JOIN base_supplier_info bsi on bsi.serial_no = oei.supplier_code and bsi.status = 'Y'
            LEFT JOIN base_service_info bsn on bsn.service_code = oei.service_code and oei.status = 'Y'
        <where>
            <if test="productCode != null  and productCode != ''"> and oei.product_code = #{productCode}</if>
            <if test="serviceCode != null  and serviceCode != ''"> and oei.service_code = #{serviceCode}</if>
            <if test="supplierCode != null  and supplierCode != ''"> and oei.supplier_code = #{supplierCode}</if>
            <if test="customerEvaluation != null  and customerEvaluation != ''"> and oei.customer_evaluation = #{customerEvaluation}</if>
            <if test="evaluationContent != null  and evaluationContent != ''"> and oei.evaluation_content = #{evaluationContent}</if>
            <if test="idType != null  and idType != ''"> and ci.id_type = #{idType}</if>
            <if test="idCode != null  and idCode != ''"> and ci.id_code = #{idCode}</if>
            <if test="name != null  and name != ''"> and ci.name like concat('%', #{name}, '%')</if>
            <if test="phone != null  and phone != ''"> and ci.phone = #{phone}</if>
            <if test="policyNo != null  and policyNo != ''"> and oei.policy_no = #{policyNo}</if>
             and oei.status = 'Y'
        </where>
    </select>
    
    <select id="selectOrderEvaluateInfoById" parameterType="String" resultMap="OrderEvaluateInfoResult">
        <include refid="selectOrderEvaluateInfoVo"/>
        where serial_no = #{serialNo}
    </select>
        
    <insert id="insertOrderEvaluateInfo" parameterType="OrderEvaluateInfo">
        insert into order_evaluate_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="serialNo != null">serial_no,</if>
            <if test="productCode != null and productCode != ''">product_code,</if>
            <if test="serviceCode != null and serviceCode != ''">service_code,</if>
            <if test="supplierCode != null and supplierCode != ''">supplier_code,</if>
            <if test="customerNo != null and customerNo != ''">customer_no,</if>
            <if test="customerEvaluation != null and customerEvaluation != ''">customer_evaluation,</if>
            <if test="evaluationContent != null and evaluationContent != ''">evaluation_content,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="serialNo != null">#{serialNo},</if>
            <if test="productCode != null and productCode != ''">#{productCode},</if>
            <if test="serviceCode != null and serviceCode != ''">#{serviceCode},</if>
            <if test="supplierCode != null and supplierCode != ''">#{supplierCode},</if>
            <if test="customerNo != null and customerNo != ''">#{customerNo},</if>
            <if test="customerEvaluation != null and customerEvaluation != ''">#{customerEvaluation},</if>
            <if test="evaluationContent != null and evaluationContent != ''">#{evaluationContent},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateOrderEvaluateInfo" parameterType="OrderEvaluateInfo">
        update order_evaluate_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="productCode != null and productCode != ''">product_code = #{productCode},</if>
            <if test="serviceCode != null and serviceCode != ''">service_code = #{serviceCode},</if>
            <if test="supplierCode != null and supplierCode != ''">supplier_code = #{supplierCode},</if>
            <if test="customerNo != null and customerNo != ''">customer_no = #{customerNo},</if>
            <if test="customerEvaluation != null and customerEvaluation != ''">customer_evaluation = #{customerEvaluation},</if>
            <if test="evaluationContent != null and evaluationContent != ''">evaluation_content = #{evaluationContent},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where serial_no = #{serialNo}
    </update>

    <delete id="deleteOrderEvaluateInfoById" parameterType="String">
        delete from order_evaluate_info where serial_no = #{serialNo}
    </delete>

    <delete id="deleteOrderEvaluateInfoByIds" parameterType="String">
        delete from order_evaluate_info where serial_no in 
        <foreach item="serialNo" collection="array" open="(" separator="," close=")">
            #{serialNo}
        </foreach>
    </delete>
    
</mapper>