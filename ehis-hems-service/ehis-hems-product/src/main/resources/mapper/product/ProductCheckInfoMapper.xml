<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.product.mapper.ProductCheckInfoMapper">
    
    <resultMap type="ProductCheckInfo" id="ProductCheckInfoResult">
        <result property="serialNo"    column="serial_no"    />
        <result property="productCode"    column="product_code"    />
        <result property="checkResult"    column="check_result"    />
        <result property="checkAdvice"    column="check_advice"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectProductCheckInfoVo">
        select serial_no, product_code, check_result, check_advice, status, create_by, create_time, update_by, update_time from product_check_info
    </sql>

    <select id="selectProductCheckInfoList" parameterType="ProductCheckInfo" resultMap="ProductCheckInfoResult">
        <include refid="selectProductCheckInfoVo"/>
        <where>  
            <if test="productCode != null  and productCode != ''"> and product_code = #{productCode}</if>
            <if test="checkResult != null  and checkResult != ''"> and check_result = #{checkResult}</if>
            <if test="checkAdvice != null  and checkAdvice != ''"> and check_advice = #{checkAdvice}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectProductCheckInfoById" parameterType="String" resultMap="ProductCheckInfoResult">
        <include refid="selectProductCheckInfoVo"/>
        where serial_no = #{serialNo}
    </select>
        
    <insert id="insertProductCheckInfo" parameterType="ProductCheckInfo">
        insert into product_check_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="serialNo != null">serial_no,</if>
            <if test="productCode != null and productCode != ''">product_code,</if>
            <if test="checkResult != null and checkResult != ''">check_result,</if>
            <if test="checkAdvice != null and checkAdvice != ''">check_advice,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="serialNo != null">#{serialNo},</if>
            <if test="productCode != null and productCode != ''">#{productCode},</if>
            <if test="checkResult != null and checkResult != ''">#{checkResult},</if>
            <if test="checkAdvice != null and checkAdvice != ''">#{checkAdvice},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateProductCheckInfo" parameterType="ProductCheckInfo">
        update product_check_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="productCode != null and productCode != ''">product_code = #{productCode},</if>
            <if test="checkResult != null and checkResult != ''">check_result = #{checkResult},</if>
            <if test="checkAdvice != null and checkAdvice != ''">check_advice = #{checkAdvice},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where serial_no = #{serialNo}
    </update>

    <delete id="deleteProductCheckInfoById" parameterType="String">
        delete from product_check_info where serial_no = #{serialNo}
    </delete>

    <delete id="deleteProductCheckInfoByIds" parameterType="String">
        delete from product_check_info where serial_no in 
        <foreach item="serialNo" collection="array" open="(" separator="," close=")">
            #{serialNo}
        </foreach>
    </delete>
    
</mapper>