<mapper namespace="com.paic.ehis.system.mapper.BaseIssuingcompanyInvoiceMapper">
    
    <resultMap type="com.paic.ehis.system.domain.BaseIssuingcompanyInvoice" id="BaseIssuingcompanyInvoiceResult">
        <result property="companyCode"    column="company_code"    />
        <result property="invoiceName"    column="invoice_name"    />
        <result property="ratepayerNumber"    column="ratepayer_number"    />
        <result property="account"    column="account"    />
        <result property="address"    column="address"    />
        <result property="telephone"    column="telephone"    />
        <result property="status"    column="status"    />
