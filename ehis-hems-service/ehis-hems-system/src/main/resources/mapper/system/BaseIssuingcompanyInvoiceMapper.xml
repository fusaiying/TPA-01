    <delete id="deleteBaseIssuingcompanyInvoiceById" parameterType="String">
        delete from base_issuingcompany_invoice where company_code = #{companyCode}
    </delete>

    <delete id="deleteBaseIssuingcompanyInvoiceByIds" parameterType="String">
        delete from base_issuingcompany_invoice where company_code in 
        <foreach item="companyCode" collection="array" open="(" separator="," close=")">
            #{companyCode}
        </foreach>
    </delete>
    
