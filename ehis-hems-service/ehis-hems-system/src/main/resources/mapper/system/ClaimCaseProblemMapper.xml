<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.system.mapper.ClaimCaseProblemMapper">

    <resultMap type="ClaimCaseProblem" id="ClaimCaseProblemResult">
        <result property="problemId"    column="problem_id"    />
        <result property="rptNo"    column="rpt_no"    />
        <result property="problemType"    column="problem_type"    />
        <result property="problemView"    column="problem_view"    />
        <result property="conclusion"    column="conclusion"    />
        <result property="conclusionView"    column="conclusion_view"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectClaimCaseProblemVo">
        select problem_id, rpt_no, problem_type, problem_view, conclusion, conclusion_view, status, create_by, create_time, update_by, update_time from claim_case_problem
    </sql>

    <select id="selectClaimCaseProblemList" parameterType="ClaimCaseProblem" resultMap="ClaimCaseProblemResult">
        <include refid="selectClaimCaseProblemVo"/>
        <where>
            <if test="rptNo != null  and rptNo != ''"> and rpt_no = #{rptNo}</if>
            <if test="problemType != null  and problemType != ''"> and problem_type = #{problemType}</if>
            <if test="problemView != null  and problemView != ''"> and problem_view = #{problemView}</if>
            <if test="conclusion != null  and conclusion != ''"> and conclusion = #{conclusion}</if>
            <if test="conclusionView != null  and conclusionView != ''"> and conclusion_view = #{conclusionView}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectClaimCaseProblemById" parameterType="Long" resultMap="ClaimCaseProblemResult">
        <include refid="selectClaimCaseProblemVo"/>
        where problem_id = #{problemId}
    </select>

    <insert id="insertClaimCaseProblem" parameterType="ClaimCaseProblem" useGeneratedKeys="true" keyProperty="problemId">
        insert into claim_case_problem
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="rptNo != null and rptNo != ''">rpt_no,</if>
            <if test="problemType != null and problemType != ''">problem_type,</if>
            <if test="problemView != null and problemView != ''">problem_view,</if>
            <if test="conclusion != null">conclusion,</if>
            <if test="conclusionView != null and conclusionView != ''">conclusion_view,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="rptNo != null and rptNo != ''">#{rptNo},</if>
            <if test="problemType != null and problemType != ''">#{problemType},</if>
            <if test="problemView != null and problemView != ''">#{problemView},</if>
            <if test="conclusion != null">#{conclusion},</if>
            <if test="conclusionView != null and conclusionView != ''">#{conclusionView},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateClaimCaseProblem" parameterType="ClaimCaseProblem">
        update claim_case_problem
        <trim prefix="SET" suffixOverrides=",">
            <if test="rptNo != null and rptNo != ''">rpt_no = #{rptNo},</if>
            <if test="problemType != null and problemType != ''">problem_type = #{problemType},</if>
            <if test="problemView != null and problemView != ''">problem_view = #{problemView},</if>
            <if test="conclusion != null">conclusion = #{conclusion},</if>
            <if test="conclusionView != null and conclusionView != ''">conclusion_view = #{conclusionView},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where problem_id = #{problemId}
    </update>

    <delete id="deleteClaimCaseProblemById" parameterType="Long">
        delete from claim_case_problem where problem_id = #{problemId}
    </delete>

    <delete id="deleteClaimCaseProblemByIds" parameterType="String">
        delete from claim_case_problem where problem_id in
        <foreach item="problemId" collection="array" open="(" separator="," close=")">
            #{problemId}
        </foreach>
    </delete>

    <select id="selectHistoricalProblem" parameterType="ClaimCaseProblem" resultMap="ClaimCaseProblemResult">
        <include refid="selectClaimCaseProblemVo"/>
        <where>
            <if test="rptNo != null  and rptNo != ''"> and rpt_no = #{rptNo}</if>
            <if test="problemType != null  and problemType != ''"> and problem_type = #{problemType}</if>
            <if test="problemView != null  and problemView != ''"> and problem_view = #{problemView}</if>
            <if test="conclusion != null  and conclusion != ''"> and conclusion = #{conclusion}</if>
            <if test="conclusionView != null  and conclusionView != ''"> and conclusion_view = #{conclusionView}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

</mapper>