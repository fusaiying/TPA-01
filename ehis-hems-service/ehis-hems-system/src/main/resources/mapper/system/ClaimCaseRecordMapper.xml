<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.system.mapper.ClaimCaseRecordMapper">
    
    <resultMap type="ClaimCaseRecord" id="ClaimCaseRecordResult">
        <result property="recordId"    column="record_id"    />
        <result property="rptNo"    column="rpt_no"    />
        <result property="operation"    column="operation"    />
        <result property="operator"    column="operator"    />
        <result property="historyFlag"    column="history_flag"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectClaimCaseRecordVo">
        select record_id, rpt_no, operation, operator, history_flag, status, create_by, create_time, update_by, update_time from claim_case_record
    </sql>

    <select id="selectClaimCaseRecordList" parameterType="ClaimCaseRecord" resultMap="ClaimCaseRecordResult">
        <include refid="selectClaimCaseRecordVo"/>
        <where>  
            <if test="rptNo != null  and rptNo != ''"> and rpt_no = #{rptNo}</if>
            <if test="operation != null  and operation != ''"> and operation = #{operation}</if>
            <if test="operator != null  and operator != ''"> and operator = #{operator}</if>
            <if test="historyFlag != null  and historyFlag != ''"> and history_flag = #{historyFlag}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectClaimCaseRecordById" parameterType="Long" resultMap="ClaimCaseRecordResult">
        <include refid="selectClaimCaseRecordVo"/>
        where record_id = #{recordId}
    </select>
        
    <insert id="insertClaimCaseRecord" parameterType="ClaimCaseRecord" useGeneratedKeys="true" keyProperty="recordId">
        insert into claim_case_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="rptNo != null and rptNo != ''">rpt_no,</if>
            <if test="operation != null and operation != ''">operation,</if>
            <if test="operator != null and operator != ''">operator,</if>
            <if test="historyFlag != null and historyFlag != ''">history_flag,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="rptNo != null and rptNo != ''">#{rptNo},</if>
            <if test="operation != null and operation != ''">#{operation},</if>
            <if test="operator != null and operator != ''">#{operator},</if>
            <if test="historyFlag != null and historyFlag != ''">#{historyFlag},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateClaimCaseRecord" parameterType="ClaimCaseRecord">
        update claim_case_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="rptNo != null and rptNo != ''">rpt_no = #{rptNo},</if>
            <if test="operation != null and operation != ''">operation = #{operation},</if>
            <if test="operator != null and operator != ''">operator = #{operator},</if>
            <if test="historyFlag != null and historyFlag != ''">history_flag = #{historyFlag},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where record_id = #{recordId}
    </update>

    <delete id="deleteClaimCaseRecordById" parameterType="Long">
        delete from claim_case_record where record_id = #{recordId}
    </delete>

    <delete id="deleteClaimCaseRecordByIds" parameterType="String">
        delete from claim_case_record where record_id in 
        <foreach item="recordId" collection="array" open="(" separator="," close=")">
            #{recordId}
        </foreach>
    </delete>

    <insert id="insertClaimCaseRecordSecond" parameterType="ClaimCaseRecord" useGeneratedKeys="true" keyProperty="recordId">
