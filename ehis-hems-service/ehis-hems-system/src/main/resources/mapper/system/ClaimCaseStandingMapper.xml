<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.system.mapper.ClaimCaseStandingMapper">
    
    <resultMap type="com.paic.ehis.system.domain.ClaimCaseStanding" id="ClaimCaseStandingResult">
        <result property="rptNo"    column="rpt_no"    />
        <result property="idNo"    column="id_no"    />
        <result property="name"    column="name"    />
        <result property="claimMaterials"    column="claim_materials"    />
        <result property="remark"    column="remark"    />
        <result property="otherInfo"    column="other_info"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectClaimCaseStandingVo">
        select rpt_no, id_no, name, claim_materials, remark, other_info, status, create_by, create_time, update_by, update_time from claim_case_standing
    </sql>

    <select id="selectClaimCaseStandingList" parameterType="com.paic.ehis.system.domain.ClaimCaseStanding" resultMap="ClaimCaseStandingResult">
        <include refid="selectClaimCaseStandingVo"/>
        <where>  
            <if test="idNo != null  and idNo != ''"> and id_no = #{idNo}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="claimMaterials != null  and claimMaterials != ''"> and claim_materials = #{claimMaterials}</if>
            <if test="otherInfo != null  and otherInfo != ''"> and other_info = #{otherInfo}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectClaimCaseStandingById" parameterType="String" resultMap="ClaimCaseStandingResult">
        <include refid="selectClaimCaseStandingVo"/>
        where rpt_no = #{rptNo}
    </select>
        
    <insert id="insertClaimCaseStanding" parameterType="com.paic.ehis.system.domain.ClaimCaseStanding">
        insert into claim_case_standing
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="rptNo != null">rpt_no,</if>
            <if test="idNo != null and idNo != ''">id_no,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="claimMaterials != null and claimMaterials != ''">claim_materials,</if>
            <if test="remark != null and remark != ''">remark,</if>
            <if test="otherInfo != null and otherInfo != ''">other_info,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="rptNo != null">#{rptNo},</if>
            <if test="idNo != null and idNo != ''">#{idNo},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="claimMaterials != null and claimMaterials != ''">#{claimMaterials},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            <if test="otherInfo != null and otherInfo != ''">#{otherInfo},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateClaimCaseStanding" parameterType="com.paic.ehis.system.domain.ClaimCaseStanding">
        update claim_case_standing
        <trim prefix="SET" suffixOverrides=",">
            <if test="idNo != null and idNo != ''">id_no = #{idNo},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="claimMaterials != null and claimMaterials != ''">claim_materials = #{claimMaterials},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="otherInfo != null and otherInfo != ''">other_info = #{otherInfo},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where rpt_no = #{rptNo}
    </update>

    <delete id="deleteClaimCaseStandingById" parameterType="String">
        delete from claim_case_standing where rpt_no = #{rptNo}
    </delete>

    <delete id="deleteClaimCaseStandingByIds" parameterType="String">
        delete from claim_case_standing where rpt_no in 
        <foreach item="rptNo" collection="array" open="(" separator="," close=")">
            #{rptNo}
        </foreach>
    </delete>
    
</mapper>