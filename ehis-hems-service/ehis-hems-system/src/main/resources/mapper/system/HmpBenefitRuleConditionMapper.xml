<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paic.ehis.system.mapper.HmpBenefitRuleConditionMapper">
    
    <resultMap type="HmpBenefitRuleCondition" id="HmpBenefitRuleConditionResult">
        <result property="rulecode"    column="rulecode"    />
        <result property="conditiontype"    column="conditiontype"    />
        <result property="conditioncode"    column="conditioncode"    />
        <result property="conditionname"    column="conditionname"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectHmpBenefitRuleConditionVo">
        select rulecode, conditiontype, conditioncode, conditionname, create_by, create_time, update_by, update_time from hmp_benefit_rule_condition
    </sql>

    <select id="selectHmpBenefitRuleConditionList" parameterType="HmpBenefitRuleCondition" resultMap="HmpBenefitRuleConditionResult">
        <include refid="selectHmpBenefitRuleConditionVo"/>
        <where>  
            <if test="rulecode != null  and rulecode != ''"> and rulecode like concat('%', #{rulecode}, '%')</if>
            <if test="conditionname != null  and conditionname != ''"> and conditionname like concat('%', #{conditionname}, '%')</if>
        </where>
    </select>
    
    <select id="selectHmpBenefitRuleConditionById" parameterType="String" resultMap="HmpBenefitRuleConditionResult">
        <include refid="selectHmpBenefitRuleConditionVo"/>
        where conditiontype = #{conditiontype}
    </select>
        
    <insert id="insertHmpBenefitRuleCondition" parameterType="HmpBenefitRuleCondition">
        insert into hmp_benefit_rule_condition
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="rulecode != null and rulecode != ''">rulecode,</if>
            <if test="conditiontype != null">conditiontype,</if>
            <if test="conditioncode != null">conditioncode,</if>
            <if test="conditionname != null">conditionname,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="rulecode != null and rulecode != ''">#{rulecode},</if>
            <if test="conditiontype != null">#{conditiontype},</if>
            <if test="conditioncode != null">#{conditioncode},</if>
            <if test="conditionname != null">#{conditionname},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateHmpBenefitRuleCondition" parameterType="HmpBenefitRuleCondition">
        update hmp_benefit_rule_condition
        <trim prefix="SET" suffixOverrides=",">
            <if test="rulecode != null and rulecode != ''">rulecode = #{rulecode},</if>
            <if test="conditioncode != null">conditioncode = #{conditioncode},</if>
            <if test="conditionname != null">conditionname = #{conditionname},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where conditiontype = #{conditiontype}
    </update>

    <delete id="deleteHmpBenefitRuleConditionById" parameterType="String">
        delete from hmp_benefit_rule_condition where conditiontype = #{conditiontype}
    </delete>

    <delete id="deleteHmpBenefitRuleConditionByIds" parameterType="String">
        delete from hmp_benefit_rule_condition where conditiontype in 
        <foreach item="conditiontype" collection="array" open="(" separator="," close=")">
            #{conditiontype}
        </foreach>
    </delete>
    
</mapper>